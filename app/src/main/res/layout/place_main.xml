<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nevado"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="0dp"></ImageView>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="376dp"
        android:layout_height="35dp"

        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/permanent_marker"
        android:text="Parque Nacional los Nevados"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp"/>

    <TextView
        android:id="@+id/place_desc"
        android:layout_width="379dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/happy_monkey"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:text="@string/descnevado"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/temperature"
        tools:layout_editor_absoluteX="18dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/location"
        android:layout_width="381dp"
        android:layout_height="50dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/happy_monkey"
        android:text="📍Ubicación📍\nCordillera Central en la región Andina de los Andes colombianos"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/place_name"
        tools:layout_editor_absoluteX="14dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/temperature"
        android:layout_width="383dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/happy_monkey"
        android:text="🌡️ Temperatura 🌡️\nEntre -3 y 14 °C"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/location"
        tools:layout_editor_absoluteX="14dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sites"
        android:layout_width="383dp"
        android:layout_height="52dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/happy_monkey"
        android:text="🗺️ Sitios recomendados 🗺️\nNevado del Ruiz, Nevado de Santa Isabel, Nevado del Tolima"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/place_desc"
        tools:layout_editor_absoluteX="14dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>