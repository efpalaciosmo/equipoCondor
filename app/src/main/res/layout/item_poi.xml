<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    tools:layout_margin="12dp"
    app:cardBackgroundColor="@color/gray"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poi"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_poi"
            android:text="POI NAME"
            android:textSize="23sp"/>

       <TextView
           android:id="@+id/tv_description"
           android:layout_width="match_parent"
           android:layout_height="110dp"
           app:layout_constraintTop_toBottomOf="@id/tv_name"
           android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas posuere, lectus sit amet maximus aliquam, elit sem fermentum lectus, eu finibus quam magna sit amet arcu. Nulla velit elit, pulvinar ut pellentesque et, hendrerit sed mi. Donec"/>


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:text="POI location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description" />

        <ImageView
            android:id="@+id/iv_locationIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/iconlocation" />            app:srcCompat="@drawable/foto"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>